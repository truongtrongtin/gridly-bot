{
  "name": "gridly-slack-bot",
  "version": "1.0.0",
  "description": "Bolt getting started app in TypeScript",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon -r dotenv/config src/app.ts",
    "prepare": "husky install",
    "lint": "eslint \"**/*.ts\""
  },
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "3.12.2",
    "chrono-node": "2.4.2",
    "date-fns": "2.29.3",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.3.0",
    "@types/express": "4.17.14",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "18.11.11",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "commitlint": "17.3.0",
    "dotenv": "16.0.3",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/ban-ts-comment": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --cache --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "dependencyDashboard": false,
    "separateMajorMinor": false,
    "packageRules": [
      {
        "matchPackagePatterns": [
          "*"
        ],
        "groupName": "all dependencies",
        "groupSlug": "all",
        "automerge": true,
        "automergeType": "branch",
        "automergeSchedule": [
          "every weekend"
        ]
      }
    ],
    "schedule": [
      "every weekend"
    ]
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}
