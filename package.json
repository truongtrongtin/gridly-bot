{
  "name": "gridly-slack-bot",
  "version": "1.0.0",
  "description": "Bolt getting started app in TypeScript",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "start": "nodemon \"src/app.ts\"",
    "prepare": "husky install",
    "lint": "eslint \"**/*.ts\""
  },
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "3.11.1",
    "axios": "0.27.2",
    "chrono-node": "2.3.8",
    "date-fns": "2.28.0",
    "dotenv": "16.0.1",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "17.0.34",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "commitlint": "17.0.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.0",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.js": "eslint --cache --fix"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "dependencyDashboard": false,
    "separateMajorMinor": false,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "minor",
          "pin",
          "digest"
        ],
        "automerge": true,
        "automergeType": "branch"
      }
    ],
    "schedule": [
      "every weekday"
    ]
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
